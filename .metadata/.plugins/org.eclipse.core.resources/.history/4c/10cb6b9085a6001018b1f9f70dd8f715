package day5;
import java.util.*;

public class SlidingWindow {
	public static void findLengthSameValue1(int[] arr) {
		Queue<Integer> check = new LinkedList<Integer>();
		ArrayList<Integer> longest = new ArrayList<>();
		for(int i = 0; i < arr.length; i++) {
			check.add(arr[i]);
			while(check.peek() != arr[i]) {
				check.poll();
			}
			longest.add(check.size());
		}
		int lengthMax = Collections.max(longest);
		int index = Collections.binarySearch(longest, lengthMax);
		System.out.print(lengthMax + " : " + index);
	}
	public static void main(String[] args) {
		int[] arr = {7, 3, 3, 3, 2, 2, 4, 2, 2};
		findLengthSameValue1(arr);
	}
}

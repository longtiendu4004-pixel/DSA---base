package day6;

import java.util.Stack;

class Node {
	public int value;
	public Node next;
	public Node(int value) {
		this.value = value;
	}
}
public class MinStack {
	private Stack<Integer> minStack = new Stack();
    public Node head;
    public void push(int val) {
        Node newNode = new Node(val);
        newNode.next = head;
        head = newNode;
        if(minStack.isEmpty() || minStack.peek() > val) {
        	minStack.push(val);
        }
    }
    
    public void pop() {
        if(head == null) return;
        else {
        	int top = head.value;
        	head = head.next;
        	if(top == minStack.peek()) {
        		minStack.pop();
        	}
        }
        
    }
    
    public int top() {
        return head.value;
    }
    
    public int getMin() {
    	return minStack.peek();
    }
    public void show() {
    	Node curr = head;
    	while(curr != null) {
    		System.out.println(curr.value);
    		curr = curr.next;
    	}
    }
    public static void main(String args[]) {
    	MinStack stack = new MinStack();
    	stack.push(10);
    	stack.push(11);
    	stack.push(12);
    	stack.push(13);
    	stack.push(14);
    	System.out.print(stack.getMin());
    }
}

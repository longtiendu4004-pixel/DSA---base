package day9;

public class backtracking2 {
	//bài tổ hợp chập k của n
	// k là số giá trị muốn lấy
	// n là không gian mẫu 
	
	// khai báo n và k
	public static int k = 2;
	public static int n = 4;
	
	// cần 1 mảng để lưu từng giá trị của k
	public static int[] arr = new int[10];
	
	//hàm show
	public static void show() {
		for(int i = 1; i <= k; i++) {
			System.out.print(arr[i] + " ");
		}
		System.out.println();
	}
	
	//hàm tổ hợp
	//debug
	public static void Try(int i) {//i là index của chuỗi n
		for(int j = 1; j <= n - k + i; j++) {
			if(arr[i - 1] == j) {
				break;
			}
			arr[i] = j;
			if(i == k) {
				show();
			}else {
				Try(i + 1);
			}
		}
	}
	//main
	public static void main(String[] args) {
		Try(1);
	}
}

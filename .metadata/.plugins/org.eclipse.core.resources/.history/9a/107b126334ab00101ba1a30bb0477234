package day11;

public class Twopointers {
	public static void find(int k, int n, int S) {
		int left = 0;
		int right = n;
		while(left > right) {
			int sum = left + right;
			if(sum > S) {
				right--;
			}else if(sum < S) {
				left++;
			}else {
				System.out.println(left + "  " + right);
				left++;
			}
		}
	}
	public static void main(String[] args) {
		find(2, 5, 5);
	}
}

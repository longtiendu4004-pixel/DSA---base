package day7;

public class MyArrayStack implements IStackQueue{
	private int [] array;
	private int SIZE;
	private int top = -1;
	public MyArrayStack(int size) {
		this.SIZE = size;
		this.array = new int[SIZE];
	}
	@Override
	public boolean push(int value) {
		// TODO Auto-generated method stub
		if(!isFull()) {
			top++;
			array[top] = value;
		}
		return false;
	}

	@Override
	public int pop() {
		// TODO Auto-generated method stub
		if(!isEmpty()) {
			int value = array[top];
			top--;
			return value;
		}
		return -1;
	}

	@Override
	public boolean isFull() {
		// TODO Auto-generated method stub
		return top == this.SIZE - 1;
	}

	@Override
	public boolean isEmpty() {
		// TODO Auto-generated method stub
		return top == -1;
	}

	@Override
	public void show() {
		// TODO Auto-generated method stub
		if(!isEmpty()) {
			System.out.print("Stack is empty");
			return;
		}
		for(int i = top; i >= 0 ; i--) {
			System.out.println(i);
		}
	}

}

package day5;
import java.util.*;

public class SlidingWindow {
	public static List<Integer> findLengthSameValue1(int[] arr) {
		ArrayList<Integer> counter = new ArrayList<>();
		int count = 0;
		for(int i = 0; i < arr.length -1; i++) {
			if(arr[i] == arr[i + 1]) {
				count++;
			}else {
				counter.add(count + 1);
				count = 0;
			}
		}
		return counter;
	}
	public static int findLengthSameValue2(int[] arr) {
		
		return 0;
	}
	public static void main(String[] args) {
		int[] arr = {7, 3, 3, 3, 2, 2, 2, 2, 2};
		System.out.print(findLengthSameValue1(arr));
	}
}

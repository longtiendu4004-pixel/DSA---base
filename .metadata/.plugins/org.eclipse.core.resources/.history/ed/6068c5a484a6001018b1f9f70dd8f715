package day5;
import java.util.*;

public class SlidingWindow {
	public static ArrayList<Integer> findLengthSameValue1(int[] arr) {
		Queue<Integer> check = new LinkedList<Integer>();
		ArrayList<Integer> longest = new ArrayList<>();
		for(int i = 0; i < arr.length; i++) {
			check.add(arr[i]);
			if(check.peek() != arr[i]) {
				check.poll();
			}
			longest.add(check.size());
		}
		return longest;
	}
	public static ArrayList<Integer> findLengthSameValue2(int[] arr) {
		Queue<Integer> check = new LinkedList<Integer>();
		ArrayList<Integer> longest = new ArrayList<>();
		for(int i = 0; i < arr.length; i++) {
			check.add(arr[i]);
			int count = 0;
			while(check.peek() != arr[i]) {
				count++;
				check.poll();
			}
			longest.add(count);
		}
		return longest;
	}
	public static void main(String[] args) {
		int[] arr = {7, 3, 3, 3, 2, 2, 2, 2, 2};
		System.out.println(findLengthSameValue1(arr));
		System.out.println(findLengthSameValue2(arr));
	}
}

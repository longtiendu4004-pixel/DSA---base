package next.neetcode;

import java.util.Scanner;

public class bai1{
	// tên của class trùng với tên file
	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);// class có sẵn
		// Scanner do java code nên mình phải import 
		//nãy in ra System.out
		// nhập vào là System.in
		System.out.print("Nhập vào a :");
		int a = sc.nextInt(); 
		System.out.print("Nhập vào b :");
		float b = sc.nextFloat();
		System.out.print("Nhập vào c :");
		double c = sc.nextDouble();
		System.out.printf("/n%d, %f, %f", a, b, c);
		//printf trong cái này muốn xuống dòng hay lmj là do mình
		// /n: xuống dòng
		// %d : int
		// %f : float và double
		
	}
}

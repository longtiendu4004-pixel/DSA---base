package day6;

class Node {
	public int value;
	public Node next;
	public Node(int value) {
		this.value = value;
	}
}
public class MiniumStack {
    public Node head;
    int min = Integer.MAX_VALUE;
    public void push(int val) {
    	if(val < min) {
    		min = val;
    	}
        Node newNode = new Node(val);
        newNode.next = head;
        head = newNode;
    }
    
    public void pop() {
        head = head.next;
    }
    
    public int top() {
        return head.value;
    }
    
    public int getMin() {
        return min;
    }
    public void show() {
    	Node curr = head;
    	while(curr != null) {
    		System.out.println(curr.value);
    		curr = curr.next;
    	}
    }
    public static void main(String args[]) {
    	MiniumStack stack = new MiniumStack();
    	stack.push(10);
    	stack.push(11);
    	stack.push(12);
    	stack.push(13);
    	stack.push(14);
    	System.out.print(stack.getMin());
    }
}
